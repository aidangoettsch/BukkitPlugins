package com.yayestechlab.minecraft.Follow;

import org.bukkit.Location;
import org.bukkit.entity.Player;
import org.bukkit.util.Vector;

public class Timer extends Thread{\
	Player p1;
	Player p2;
	
	public void start(Player p11, Player p21){
		p1 = p11;
		p2 = p21;
	}
	
	public void run(){
		Location location = p1.getLocation();
		int speed = 1;
		Vector dir = location.toVector().subtract(p2.getLocation().toVector()).normalize();
		p2.setVelocity(dir.multiply(speed));
	}
}
